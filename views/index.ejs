<% include partials/layout %>

  <header>
    <h1 class='main_title center'><%= title %>:</h1>
  </header>

  <main class='list_container'>
    <div>
      <ul>
        <% for(var i = 0; i < articles.length; i++) { %>
          <h2>Article <%= i + 1  %>:</h2>
          <li><%= articles[i].author %></li>
          <li><a href='/article/<%= articles[i]._id %>' ><%= articles[i].title %></a></li>
          <li><%= articles[i].body %></li>
        <% } %>
      </ul>
    </div>
  </main>

<% include partials/footer %>
